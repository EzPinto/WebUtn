<div class="container margin">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" name="subtitulo" placeholder="Subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: </label>
                    <label><input type="file" name="imagen" id="imagen" /></label>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" name="cuerpo" placeholder="Cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <p class="error">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>