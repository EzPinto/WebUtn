<div class="container">
<div class="margin">
    {{!--Fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-danger">Log Out <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!--Fin Fila 1 --}}
</div>
{{!--Fila 2 --}}
<div class="row">
    <div class="col-7">
        <h3>Listado de Novedades</h3>
    </div>
    <div class="col-5 text-end">
        <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus" aria-hidden="true"></i>
        Nuevo</a>
    </div>
</div>
{{!--Fin Fila 2 --}}
{{!--Fila 3 --}}
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each news}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-end">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                        <i class="fas fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                        <i class="fas fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                    {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>
{{!--Fin Fila 3 --}}